
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"

    android:layout_height="match_parent">



    <EditText

        android:id="@+id/userPromptInput"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:hint="Enter your prompt here"

        android:layout_margin="16dp"/>



    <Button

        android:id="@+id/generateTaskButton"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Generate Task"

        android:layout_below="@id/userPromptInput"

        android:layout_margin="16dp"

        android:layout_centerHorizontal="true"/>



    <RecyclerView

        android:id="@+id/recyclerView"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:layout_below="@id/generateTaskButton"

        android:layout_margin="16dp"/>

</RelativeLayout>

